<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TitleBar">
        <attr name="bl_leftTitleDrawable" format="reference" />
        <attr name="bl_leftTitleDrawablePadding" format="reference|dimension" />

        <attr name="bl_leftTitleText" format="reference|string" />
        <attr name="bl_leftTitleTextColor" format="reference|color" />
        <attr name="bl_leftTitleTextSize" format="reference|dimension" />

        <attr name="bl_titleText" format="reference|string" />
        <attr name="bl_titleTextSize" format="reference|dimension" />
        <attr name="bl_titleTextColor" format="reference|color" />
        <attr name="bl_titleDrawable" format="reference" />
        <!-- 当既有titleText，又有titleDrawable时，设置该属性 -->
        <attr name="bl_titleDrawablePadding" format="reference|dimension" />

        <attr name="bl_subTitleText" format="reference|string" />
        <attr name="bl_subTitleTextColor" format="reference|color" />
        <attr name="bl_subTitleTextSize" format="reference|dimension" />

        <attr name="bl_leftAndRightTextColor" format="reference|color" />
        <attr name="bl_leftAndRightTextSize" format="reference|dimension" />
        <attr name="bl_leftAndRightPadding" format="reference|dimension" />
        <attr name="bl_ActionPadding" format="reference|dimension" />
        <attr name="bl_isImmersive" format="boolean" />
        <attr name="bl_titleBarHeight" format="reference|dimension" />
        <attr name="bl_divider" format="reference" />
        <attr name="bl_dividerColor" format="reference|color" />
        <attr name="bl_dividerHeight" format="reference|dimension" />

    </declare-styleable>

</resources>